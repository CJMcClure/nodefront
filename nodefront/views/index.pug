extends layout

block content
	div(class="jumbotron container-fluid col-sm-12")
			h1(class="display-3 text-center") Start Shopping Now
			p(class="lead text-center") Check out our full line of products below!
	if spotlight
		h2(class="text-center") Spotlight
		div(class="row")
			div(class="col-sm-6 col-md-3")
				div(class="thumbnail")
					img(src="..." alt="...")
					div(class="caption")
						h3 
							a(href="#") Product Name
						p
							a(href="#" class="btn btn-default" role="button") Add To Cart
	h3(class="text-center") Products
	div(class="panel panel-default")
		div(class="panel-body")
			if typeof products != 'undefined' && products.length > 0
				each product in products
					-imgPath = product.imgPath
					-id = product.id
					-max = product.quantity
					-price = "$" + product.price
					div(class="col-sm-6 col-md-2")
						div(class="thumbnail")
							img(src=imgPath)
							div(class="caption")
								h4 
									a(href="#") #{product.name}
								p= price
								form(action="/cart/add" method="post")
									div(class="form-group")
										input(name="id" type="hidden" value=id)
										label Quantity
										input(name="quantity" value="1" type="number" class="form-control" placeholder="0" min="1" max=max)
									button(type="submit" class="btn btn-default" role="button") Add To Cart
			else
				p(class="text-center") This store hasn't added any products.





